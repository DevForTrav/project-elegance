<div id="<%= dom_id boat_circuit %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Boat:</strong>
    <%= boat_circuit.boat_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Circuit:</strong>
    <%= boat_circuit.circuit_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this boat circuit", boat_circuit, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this boat circuit", edit_boat_circuit_path(boat_circuit), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
