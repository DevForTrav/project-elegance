<div id="<%= dom_id terminal %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= terminal.name.titleize %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Part number:</strong>
    <%= terminal.part_number %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Gender:</strong>
    <%= terminal.gender&.titleize %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this terminal", terminal, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this terminal", edit_terminal_path(terminal), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
