<div id="<%= dom_id boat_component %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Boat:</strong>
    <%= boat_component.boat_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Component:</strong>
    <%= boat_component.component_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this boat component", boat_component, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this boat component", edit_boat_component_path(boat_component), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
