<%= turbo_frame_tag :right_form_modal do %>
  <%= render "layouts/right_form_modal" do %>
    <div class="w-full mx-auto md:w-2/3">
      <h1 class="text-4xl font-bold">Editing boat</h1>

      <%= render "form", boat: @boat %>

      <%= link_to "Show this boat", @boat, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to boats", boats_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  <% end %>
<% end %>