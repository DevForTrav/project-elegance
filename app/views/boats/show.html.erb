<div>
  <div>
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>

    <%= render @boat %>
    
    <div class="pt-10">
      <% if @boat.categorized_components.present? %>
        <h1 class="text-2xl font-bold">Components</h1>

        <% @boat.categorized_components.each do |category, components| %>
            <%= render "components/category_dropdown", { category: category, components: components } %>
        <% end %>
      <% else %> 
        <%= render "components/empty_state", boat: @boat %>
      <% end %> 
    </div>

  </div>
</div>

