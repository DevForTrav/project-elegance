<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between pb-5">
    <h1 class="text-3xl font-bold">Boats</h1>
    <%= link_to "New boat", new_boat_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium", data: { turbo_frame: :right_form_modal} %>
  </div>

  <div id="boats" class="grid grid-cols-3 gap-5">
    <%# <%= render @boats %>
    <% @boats.each do |boat| %>
      <%= render partial: "boat_card", locals: { boat: boat } %>
    <% end %>
  </div>
</div>
