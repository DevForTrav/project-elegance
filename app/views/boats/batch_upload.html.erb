<%= turbo_frame_tag "boat_batch_upload_form" do %>
  <%= form_with url: boat_batch_create_path do |form| %>
    <h1 class="px-3 text-xl font-bold">Upload Boats</h1>
    <div class="flex justify-between">
      <%= form.file_field :boat_file, class: "border-gray-200 outline-none px-3 py-2 mt-2" %>
      <%= form.submit "Submit", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
<% end %>