<div id="<%= dom_id boat_wiring_harness %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Boat:</strong>
    <%= boat_wiring_harness.boat_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Wiring harness:</strong>
    <%= boat_wiring_harness.wiring_harness_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this boat wiring harness", boat_wiring_harness, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this boat wiring harness", edit_boat_wiring_harness_path(boat_wiring_harness), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
