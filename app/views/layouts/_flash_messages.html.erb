<%= turbo_frame_tag :flash, data: { controller: "flash-messages"} do %>  
  <% flash.each do |message_type, message| %>
    <% if message_type == "notice" %>
      <div class="fixed bottom-0 right-0 z-40 p-4 m-4 text-white bg-green-400 rounded-md shadow-lg" data-flash-messages-target="message"  >
        <div class="flash <%= message_type %>"><%= message %></div>
      </div>
    <% else %>
      <div class="fixed bottom-0 right-0 z-40 p-4 m-4 text-white bg-red-200 rounded-md shadow-lg" data-flash-messages-target="message"  >
        <div class="flash <%= message_type %>"><%= message %></div>
      </div>
    <% end %>
  <% end %>
<% end %>